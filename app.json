{
  "name": "TimeSheet",
  "description": "TimeSheet generates invoices on Zipbooks based on time entries at Toggl.",
  "keywords": ["timesheet", "time tracking", "zipbooks", "toggl"],
  "website": "https://github.com/mr-php/timesheet",
  "repository": "https://github.com/mr-php/timesheet",
  "env": {
    "APP_ADMIN_EMAIL": {
      "description": "Admin email address."
    },
    "APP_COOKIE_VALIDATION_KEY": {
      "description": "Cookie validation key.",
      "generator": "secret"
    },
    "APP_NAME": {
      "description": "Application name.",
      "value": "TimeSheet"
    },
    "APP_PASSWORD": {
      "description": "Access password.",
      "value": "secret"
    },
    "APP_TIMEZONE": {
      "description": "Time zone.",
      "value": "Australia/Adelaide"
    }
  },
  "addons": [
    "heroku-postgresql"
  ]
}
